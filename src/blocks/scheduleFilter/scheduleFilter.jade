include ../formInput/formInput
include ../formSelectMultiple/formSelectMultiple

mixin scheduleFilter
    +b('div').scheduleFilter
        +e('div').wrapper
            +e('div').header
                +e('div').title!= "Фильтр"

            +e('div').content
                +e('ul').list
                    +e('li').item
                        +formInput({
                            type: 'date',
                            label: 'Начало',
                            name: 'from',
                            id: 'from',
                            min: '2016-01-01',
                            max: '2016-12-31',
                            value: '2016-10-01'
                        })

                    +e('li').item
                        +formInput({
                            type: 'date',
                            label: 'Конец',
                            name: 'to',
                            id: 'to',
                            min: '2016-01-01',
                            max: '2016-12-31',
                            value: '2016-12-31'
                        })

                    +e('li').item
                        +formSelectMultiple({
                            label: 'Школа',
                            name: 'school',
                            id: 'school',
                            list: [
                                {
                                    value: 0,
                                    text: 'Школа разработки интерфейсов'
                                },
                                {
                                    value: 1,
                                    text: 'Школа мобильной разработки'
                                },
                                {
                                    value: 2,
                                    text: 'Школа мобильного дизайна'
                                }
                            ]
                        })

                    +e('li').item
                        +formSelectMultiple({
                            label: 'Лектор',
                            name: 'author',
                            id: 'author',
                            list: [
                                {
                                    value: 0,
                                    text: 'Лектор 1'
                                },
                                {
                                    value: 1,
                                    text: 'Лектор 2'
                                },
                                {
                                    value: 2,
                                    text: 'Лектор 3'
                                }
                            ]
                        })

