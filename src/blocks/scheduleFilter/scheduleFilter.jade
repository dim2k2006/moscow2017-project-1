include ../formInput/formInput
include ../formSelectMultiple/formSelectMultiple

mixin scheduleFilter
    +b('div').scheduleFilter
        +e('div').wrapper
            +e('div').header
                +e('div').title!= "Фильтр"

            +e('div').content
                +e('ul').list
                    +e('li').item
                        +formInput({
                            type: 'date',
                            label: 'Начало',
                            name: 'from',
                            id: 'from',
                            min: '2016-01-01',
                            max: '2016-12-31',
                            value: '2016-10-01',
                            placeholder: 'гггг-мм-дд'
                        })

                    +e('li').item
                        +formInput({
                            type: 'date',
                            label: 'Конец',
                            name: 'to',
                            id: 'to',
                            min: '2016-01-01',
                            max: '2016-12-31',
                            value: '2016-12-31',
                            placeholder: 'гггг-мм-дд'
                        })

                    +e('li').item
                        +formSelectMultiple({
                            mods: 'school',
                            label: 'Школа',
                            name: 'school',
                            id: 'school',
                            list: []
                        })

                    +e('li').item
                        +formSelectMultiple({
                            mods: 'author',
                            label: 'Лектор',
                            name: 'author',
                            id: 'author',
                            list: []
                        })

